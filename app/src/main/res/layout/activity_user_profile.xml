<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context=".Activities.UserProfile">



    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.github.florent37.shapeofview.shapes.RoundRectView

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="4dp"

        app:shape_roundRect_bottomLeftRadius="25dp"
        app:shape_roundRect_bottomRightRadius="0dp"
        app:shape_roundRect_topLeftRadius="0dp"
        app:shape_roundRect_topRightRadius="0dp"


        >

            <ImageView

                android:id="@+id/iv_user_image"
                android:scaleType="centerCrop"
                android:src="@drawable/launch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <LinearLayout
  android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_weight="1"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/black"

            android:textAllCaps="false" />
        <TextView


            android:layout_weight="0.1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"

            android:textColor="@color/black"

            android:textAllCaps="false" />

            <TextView
                android:layout_marginEnd="10dp"
                android:id="@+id/tv_user_name"

                android:text="Shopia"
                android:gravity="end"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"

                android:textAllCaps="false" />



    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_weight="1"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20sp"
            android:textColor="@color/black"

            android:textAllCaps="false" />
        <TextView


            android:layout_weight="0.1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"

            android:textColor="@color/black"

            android:textAllCaps="false" />

        <TextView
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_user_gender"
            android:text="Female"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"

            android:textAllCaps="false" />



    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_weight="1"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="20sp"
            android:textColor="@color/black"

            android:textAllCaps="false" />
        <TextView


            android:layout_weight="0.1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"

            android:textColor="@color/black"

            android:textAllCaps="false" />

        <TextView
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_user_age"
            android:text="19 Yr"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"

            android:textAllCaps="false" />



    </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:tint="@color/white"
        android:rotation="180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/bt_send_msg"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Send Message"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/solid_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</RelativeLayout>